<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayQRCode">

    <ImageView android:id="@+id/backButton"
        android:src="@drawable/return_vector"
        android:contentDescription="vector_ek2"
        android:layout_marginStart="15dp"
        android:layout_marginTop="35dp"
        android:layout_width="13.13dp"
        android:layout_height="22.27dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="2dp"/>

    <ImageView
        android:id="@+id/qrCodeImageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.375" />

    <TextView
        android:id="@+id/QR_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="139dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="20dp"
        android:text="Check in"
        android:textColor="@color/sky_blue"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView android:id="@+id/switch_button"
        android:textSize="16sp"
        android:textColor="@color/sky_blue"
        android:layout_width="120dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp"
        android:layout_centerHorizontal="true"
        android:text="@string/switch_text"
        android:background="@drawable/ellipse_2_shape"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"
        />

    <TextView android:id="@+id/shareButton"
        android:textSize="16sp"
        android:textColor="@color/_bg__android_small___1_ek2_color"
        android:layout_width="120dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp"
        android:layout_centerHorizontal="true"
        android:text="@string/share"
        android:background="@drawable/rectangle_1_shape"
        android:elevation="2dp"
        app:layout_constraintBottom_toTopOf="@id/switch_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        />

    <View   android:id="@+id/rectangle_12"
        android:background="@drawable/gradient_shape_attendee"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="353dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:elevation="-4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
