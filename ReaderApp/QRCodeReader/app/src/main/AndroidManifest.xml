<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY"/>
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QRCodeReader"
        tools:targetApi="31">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_api_key">
        </meta-data>
        <activity android:name=".MapView"
            android:exported="false" />
        <activity android:name=".MapViewOrganizer"
            android:exported="false" />
        <activity
            android:name=".ui.eventPage.CreateEventActivity"
            android:exported="false" />
        <activity
            android:name=".ui.eventPage.OrganizerEventActivity"
            android:launchMode="singleTop"/>
        <activity
            android:name=".ui.eventPage.BrowseEventActivity"
            android:launchMode="singleTop"/>
        <activity android:name=".ui.eventPage.EventDetailsOrganizerActivity"/>
        <activity android:name=".ui.eventPage.UserDetailsOrganizerActivity"/>
        <activity android:name=".ui.eventPage.EventDetailsAttendeeActivity"/>
        <activity android:name=".ui.eventPage.CreateEventActivityBrowsePastEvent"/>
        <activity android:name=".ui.profile.ProfileActivity"/>
        <activity android:name=".ui.eventPage.AttendanceActivity"/>
        <activity android:name=".ui.admin.AdminEventActivity"/>
        <activity android:name=".ui.admin.EventDetailsAdminActivity"/>
        <activity android:name=".ui.admin.AdminUserActivity"/>
        <activity android:name=".ui.admin.UserDetailsAdminActivity"/>
        <activity android:name=".ui.admin.AdminImagesOptionActivity"/>
        <activity android:name=".ui.dashboard.CameraActivityDisplay"/>
        <activity android:name=".CameraActivity" />

        <activity
            android:name=".DisplayQRCode"
            android:exported="false" />
        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="fullSensor"
            tools:replace="screenOrientation" />
        <activity
            android:name=".ui.eventPage.AttendeeEventActivity"
            android:launchMode="singleTop"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.notifications.NotificationsActivity"/>
<!--        <service-->
<!--            android:name=".MyFirebaseInstanceIDService">-->
<!--            <intent-filter>-->
<!--                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>-->
<!--            </intent-filter>-->
<!--        </service>-->
        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
                <action android:name="com.google.android.c2dm.intent.RECIEVE"/>
            </intent-filter>
        </service>
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id"/>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>